<section id="create-container">
    <div class="create-container-info">
        <h1>Create Event</h1>
        <form method="post">
            <label>Name of the Disaster:</label>
            <input type="text" id="name" name="name" placeholder="..." value="{{name}}">
            <label>Type of Disaster:</label>
            <select id="type" name="type">
                <option value="Wildfire" {{#if (eq type "Wildfire")}}selected{{/if}}>Wildfire</option>
                <option value="Flood" {{#if (eq type "Flood")}}selected{{/if}}>Flood</option>
                <option value="Earthquake" {{#if (eq type "Earthquake")}}selected{{/if}}>Earthquake</option>
                <option value="Hurricane" {{#if (eq type "Hurricane")}}selected{{/if}}>Hurricane</option>
                <option value="Drought" {{#if (eq type "Drought")}}selected{{/if}}>Drought</option>
                <option value="Tsunami" {{#if (eq type "Tsunami")}}selected{{/if}}>Tsunami</option>
                <option value="Other" {{#if (eq type "Other")}}selected{{/if}}>Other</option>
            </select>
            <label>Year of the Event:</label>
            <input type="number" id="year" name="year" placeholder="..." value="{{year}}">
            <label>Location:</label>
            <input type="text" id="location" name="location" placeholder="..." value="{{location}}">
            <label>Image:</label>
            <input type="text" id="image" name="image" placeholder="http://..." value="{{image}}">
            <label>Description:</label>
            <textarea id="description" name="description" placeholder="...">{{description}}</textarea>
            <input type="submit" id="btn" value="Submit"></input>
        </form>
    </div>
</section>