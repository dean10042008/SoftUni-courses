<article class="recipe-detail">
    <img src="{{recipeData.image}}" alt="{{recipeData.title}}">
    <h2>{{recipeData.title}}</h2>
    <p>{{recipeData.description}}</p>

    <h3>-----------------------------------------------------</h3>

    <h3>Ingredients:</h3>
    <p>{{recipeData.ingredients}}</p>

    <h3>-----------------------------------------------------</h3>

    <h3>Instructions:</h3>
    <p>{{recipeData.instructions}}</p>

    <h3>-----------------------------------------------------</h3>

    <h3>People Who Recommend: {{recipeData.recommendList.length}}</h3>
</article>

{{#if isSignedIn}}
    <div class="command">
        {{#if isOwner}}
            <a href="/recipes/{{recipeData._id}}/edit">Edit</a>
            <a href="/recipes/{{recipeData._id}}/delete">Delete</a>

            {{else}}
                {{#if hasRecommended}}
                    <p>You've already recommended this recipe!</p>

                    {{else}}
                        <a href="/recipes/{{recipeData._id}}/recommend">Recommend</a>
                {{/if}}
        {{/if}}
    </div>
{{/if}}