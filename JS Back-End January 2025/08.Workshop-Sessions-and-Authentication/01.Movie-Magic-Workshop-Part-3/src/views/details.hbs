<section id="details-page">

    <div class="main_card">
        <div class="card_left">
            <div class="card_datails">

                <h1>{{movie.title}}</h1>
                <div class="card-movie">
                    <div class="first-info">
                        <p class="card-genre">Genre: {{movie.genre}}</p>
                        <p class="card-director">Director: {{movie.director}}</p>

                    </div>
                    <div class="second-info">

                        <p class="card-year">Year: {{movie.year}}</p>
                        <p class="card-ranking">Rating: {{movie.rating}}</p>
                    </div>

                </div>

                <p class="disc">Description: {{movie.description}}</p>
                <p class="card-category">Category: {{movie.category}}</p>

                <div class="details-btn">
                    <a href="/movies/{{movie.id}}/attachCast">Attach</a>
                    {{#if isUserCreator}}
                        <a href="/movies/{{movie.id}}/edit" id="edit-button">Edit</a>
                        <a href="/movies/{{movie.id}}/delete" id="delete-button">Delete</a>
                    {{/if}}
                </div>
            </div>
        </div>
        <div class="card_right">
            <img src="{{movie.imageUrl}}" alt="{{movie.title}}">
        </div>
    </div>

    <div class="main-cast-card">
        {{#each casts}}
            <div class="cast-card">
                <div class="card-img">
                    <img src="{{castData.imageUrl}}" alt="cast">
                </div>
                <div class="cast-info">
                    <h1>{{castData.name}}</h1>
                    <h3>Age: {{castData.age}}</h3>
                    <h3>Born: {{castData.born}}</h3>
                    <h3>Name in Movie: {{character}}</h3>
                </div>
            </div>

            {{else}}
                <div class="no-cast">
                    <p>There are no casts added yet...</p>
                </div>
        {{/each}}
    </div>

</section>